{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar Diario",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-std=c++17",
                "main.cpp",
                // Se vocÃª criar outros arquivos .cpp, adicione-os aqui
                "-o",
                "diario.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}